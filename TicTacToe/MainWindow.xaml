<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="650"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="150px"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150px"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Title Text -->
        <TextBlock Text="Tic Tac Toe" FontSize="70px" Grid.ColumnSpan="5" VerticalAlignment="Center"></TextBlock>
        
        <!-- Buttons -->
        <Button x:Name="b1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="b1_Click" Grid.Column="0" Grid.Row="1" Width="100px" Height="100px"></Button>      
        <Button x:Name="b2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="b1_Click" Grid.Column="1" Grid.Row="1" Width="100px" Height="100px"></Button>      
        <Button x:Name="b3" HorizontalAlignment="Center" VerticalAlignment="Center" Click="b1_Click" Grid.Column="2" Grid.Row="1" Width="100px" Height="100px"></Button>      
        <Button x:Name="b4" HorizontalAlignment="Center" VerticalAlignment="Center" Click="b1_Click" Grid.Column="0" Grid.Row="2" Width="100px" Height="100px"></Button>      
        <Button x:Name="b5" HorizontalAlignment="Center" VerticalAlignment="Center" Click="b1_Click" Grid.Column="1" Grid.Row="2" Width="100px" Height="100px"></Button>      
        <Button x:Name="b6" HorizontalAlignment="Center" VerticalAlignment="Center" Click="b1_Click" Grid.Column="2" Grid.Row="2" Width="100px" Height="100px"></Button>      
        <Button x:Name="b7" HorizontalAlignment="Center" VerticalAlignment="Center" Click="b1_Click" Grid.Column="0" Grid.Row="3" Width="100px" Height="100px"></Button>      
        <Button x:Name="b8" HorizontalAlignment="Center" VerticalAlignment="Center" Click="b1_Click" Grid.Column="1" Grid.Row="3" Width="100px" Height="100px"></Button>      
        <Button x:Name="b9" HorizontalAlignment="Center" VerticalAlignment="Center" Click="b1_Click" Grid.Column="2" Grid.Row="3" Width="100px" Height="100px"></Button>      
        <!-- 00000000000000000000000000000000 -->
        
        <!-- Player Stats -->
        <Label Content="Turn:" FontSize="25px" VerticalAlignment="Center" Padding="5px" Grid.Column="3" Grid.Row="1"></Label>
        <TextBlock Text="-" FontSize="80px" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="4"></TextBlock>
        
        <!-- Settings -->
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="3" Grid.RowSpan="2">
            <TextBlock Text="Settings:" FontSize="25px" Grid.Column="3" Grid.Row="2"></TextBlock>
            <TextBlock Text="Starting player:" FontSize="16px"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <Label Content="X" FontSize="15px"></Label>
                <RadioButton GroupName="start_player" IsChecked="False" Name="start_x" VerticalAlignment="Center"></RadioButton>
                <Label Content="O" FontSize="15px"></Label>
                <RadioButton GroupName="start_player" IsChecked="False" Name="start_o" VerticalAlignment="Center"></RadioButton>
            </StackPanel>
            <TextBlock Text="Multiplayer type:" FontSize="16px"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <Label Content="PvP" FontSize="15px"></Label>
                <RadioButton GroupName="multiplayer_type" IsChecked="False" Name="pvp_multi_type" VerticalAlignment="Center"></RadioButton>
                <Label Content="PvE" FontSize="15px"></Label>
                <RadioButton GroupName="multiplayer_type" IsChecked="False" Name="pve_multi_type" VerticalAlignment="Center"></RadioButton>
            </StackPanel>
            <TextBlock Text="COM difficulty:" FontSize="16px"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <Label Content="Easy" FontSize="15px"></Label>
                <RadioButton GroupName="difficulty_type" IsChecked="False" Name="easy_difficulty" VerticalAlignment="Center"></RadioButton>
                <Label Content="Insane" FontSize="15px"></Label>
                <RadioButton GroupName="difficulty_type" IsChecked="False" Name="insane_difficulty" VerticalAlignment="Center"></RadioButton>
            </StackPanel>
        </StackPanel>

        <Button x:Name="start_game" Content="Start" VerticalAlignment="Center" Click="start_game" Padding="5px" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="3" FontSize="20px"></Button>

    </Grid>
</Window>
